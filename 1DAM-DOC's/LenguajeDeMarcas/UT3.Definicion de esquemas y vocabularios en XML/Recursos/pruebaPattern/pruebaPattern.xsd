<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" >
<xs:element name="pruebaPattern">
<xs:complexType>
   <xs:sequence>
       <xs:element name="prueba"> 
       <xs:simpleType>
                  <xs:restriction base="xs:string">
                        <xs:pattern value="[a-z]"/>
                  </xs:restriction>
        </xs:simpleType>
       </xs:element>
    </xs:sequence>
</xs:complexType>
</xs:element>
</xs:schema>
